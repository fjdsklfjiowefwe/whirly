<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dp"
    android:paddingRight="0dp"
    android:paddingBottom="10dp"
    android:paddingLeft="18dp"
    android:background="?attr/StickyThreadBackground"
    >

    <TextView
        android:id="@+id/top_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="40dp"
        android:paddingBottom="5dp"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dip"
        android:paddingRight="14dip"
        android:layout_marginTop="-8dip"
        android:gravity="right"
        style="?attr/MenuButton"
        android:alpha="0.5" />

    <TextView
        android:id="@+id/bottom_left_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_text"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/bottom_right_text"
        android:textColor="@color/list_subtext_colour" />

    <TextView
        android:id="@+id/bottom_right_text"
        android:layout_width="40dp"
        android:paddingRight="16dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_text"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textColor="@color/list_subtext_colour" />

</RelativeLayout>