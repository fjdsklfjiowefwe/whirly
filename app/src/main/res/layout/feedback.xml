<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/AppBackground"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:padding="6dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/about_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/feedback_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/TextColourPrimary"/>

        <Button
            android:layout_marginTop="56dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View the Whirldroid thread"
            android:id="@+id/open_thread"
            android:drawablePadding="10dp"
            android:drawableLeft="?attr/ThreadIcon"/>

        <Button
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email the developer"
            android:id="@+id/send_email"
            android:drawablePadding="10dp"
            android:drawableLeft="?attr/EmailIcon"/>

        <Button
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review in the Play Store"
            android:id="@+id/review_in_store"
            android:drawablePadding="10dp"
            android:drawableLeft="?attr/StarIcon"/>

    </LinearLayout>
</ScrollView>