<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="WhirldroidDarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Dark</item>

        <item name="MenuButton">@style/MenuButtonDark</item>
        <item name="StickyThreadBackground">#414559</item>
    </style>

    <style name="WhirldroidLightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="MenuButton">@style/MenuButtonLight</item>
        <item name="StickyThreadBackground">#DDDFED</item>
    </style>

    <style name="WhirldroidBottomMenu" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

</resources>