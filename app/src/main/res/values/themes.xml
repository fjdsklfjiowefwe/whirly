<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="WhirldroidDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="AppBackground">@color/AppBackgroundDark</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Dark</item>
        <item name="ForegroundColour">#ffffffff</item>

        <item name="MenuButton">@style/MenuButtonDark</item>
        <item name="StickyThreadBackground">#4d3A437B</item>

        <item name="NavigationDrawerBackground">@color/DarkNavigationDrawerBackground</item>
        <item name="NavigationDrawerIconTint">@color/DarkNavigationDrawerIconTint</item>

        <item name="TextColourPrimary">@color/TextColourPrimaryDark</item>
        <item name="TextColourSecondary">@color/TextColourSecondaryDark</item>
        <item name="DividerColour">@color/DividerColourDark</item>
        <item name="SeparatorBottom">@drawable/separator_bottom_dark</item>

        <item name="ThreadIcon">@drawable/ic_chat_white_24dp</item>
        <item name="EmailIcon">@drawable/ic_email_white_24dp</item>
        <item name="StarIcon">@drawable/ic_star_white_24dp</item>
    </style>

    <style name="WhirldroidLightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="AppBackground">@color/AppBackgroundLight</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="ForegroundColour">#de000000</item>

        <item name="MenuButton">@style/MenuButtonLight</item>
        <item name="StickyThreadBackground">#263A437B</item>

        <item name="NavigationDrawerBackground">@color/LightNavigationDrawerBackground</item>
        <item name="NavigationDrawerIconTint">@color/LightNavigationDrawerIconTint</item>

        <item name="TextColourPrimary">@color/TextColourPrimaryLight</item>
        <item name="TextColourSecondary">@color/TextColourSecondaryLight</item>
        <item name="DividerColour">@color/DividerColourLight</item>
        <item name="SeparatorBottom">@drawable/separator_bottom_light</item>

        <item name="ThreadIcon">@drawable/ic_chat_black_24dp</item>
        <item name="EmailIcon">@drawable/ic_email_black_24dp</item>
        <item name="StarIcon">@drawable/ic_star_black_24dp</item>
    </style>

    <style name="WhirldroidBottomMenu" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

</resources>